<!-- Settings Modal -->
<div class="modal fade" id="settingsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">API Settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="githubTokenInput" class="form-label">GitHub Personal Access Token (Optional)</label>
                    <input type="password" class="form-control" id="githubTokenInput" 
                           placeholder="ghp_...">
                    <div class="form-text">
                        Increases rate limit to 5,000 requests/hour. 
                        <a href="https://github.com/settings/tokens" target="_blank">Get token</a>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="soKeyInput" class="form-label">Stack Overflow API Key (Optional)</label>
                    <input type="password" class="form-control" id="soKeyInput" 
                           placeholder="Your SO key">
                    <div class="form-text">
                        Increases rate limit to 10,000 requests/day.
                        <a href="https://stackapps.com/apps/oauth/register" target="_blank">Get key</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveSettingsBtn">Save</button>
            </div>
        </div>
    </div>
</div>
